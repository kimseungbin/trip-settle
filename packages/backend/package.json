{
	"name": "backend",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "NODE_ENV=local tsc-watch --onSuccess \"node dist/packages/backend/src/main.js\"",
		"build": "tsc",
		"start": "node dist/packages/backend/src/main",
		"start:dev": "NODE_ENV=local tsc-watch --onSuccess \"node dist/packages/backend/src/main.js\"",
		"start:debug": "NODE_ENV=local tsc-watch --inspect --onSuccess \"node --inspect dist/packages/backend/src/main.js\"",
		"start:prod": "node dist/packages/backend/src/main",
		"lint": "ESLINT_USE_FLAT_CONFIG=false eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:cov": "vitest run --coverage"
	},
	"dependencies": {
		"@nestjs/common": "^10.3.0",
		"@nestjs/config": "^3.1.1",
		"@nestjs/core": "^10.3.0",
		"@nestjs/platform-express": "^10.3.0",
		"@nestjs/typeorm": "^10.0.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"pg": "^8.11.3",
		"reflect-metadata": "^0.2.1",
		"rxjs": "^7.8.1",
		"typeorm": "^0.3.19"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.2.1",
		"@nestjs/schematics": "^10.0.3",
		"@nestjs/testing": "^10.3.0",
		"@types/express": "^4.17.21",
		"@types/supertest": "^6.0.3",
		"@vitest/ui": "^3.2.4",
		"pg-mem": "^3.0.2",
		"supertest": "^7.1.4",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsc-watch": "^7.2.0",
		"tsconfig-paths": "^4.2.0",
		"vitest": "^3.2.4"
	}
}
