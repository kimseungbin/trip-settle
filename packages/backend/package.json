{
	"name": "backend",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "NODE_ENV=local tsc-watch --onSuccess \"node dist/packages/backend/src/main.js\"",
		"build": "tsc",
		"start": "node dist/packages/backend/src/main",
		"start:dev": "NODE_ENV=local tsc-watch --onSuccess \"node dist/packages/backend/src/main.js\"",
		"start:debug": "NODE_ENV=local tsc-watch --inspect --onSuccess \"node --inspect dist/packages/backend/src/main.js\"",
		"start:prod": "node dist/packages/backend/src/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "^10.3.0",
		"@nestjs/config": "^3.1.1",
		"@nestjs/core": "^10.3.0",
		"@nestjs/platform-express": "^10.3.0",
		"@nestjs/typeorm": "^10.0.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"pg": "^8.11.3",
		"reflect-metadata": "^0.2.1",
		"rxjs": "^7.8.1",
		"typeorm": "^0.3.19"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.2.1",
		"@nestjs/schematics": "^10.0.3",
		"@nestjs/testing": "^10.3.0",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.11",
		"@types/node": "^20.10.6",
		"jest": "^29.7.0",
		"pg-mem": "^3.0.2",
		"ts-jest": "^29.1.1",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsc-watch": "^7.2.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3"
	}
}
