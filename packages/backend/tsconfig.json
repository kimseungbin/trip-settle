{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		// NestJS-specific options
		"module": "commonjs",
		"target": "ES2022",
		"emitDecoratorMetadata": true,

		// Output
		"outDir": "./dist",
		"incremental": true,

		// Paths
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},

		// NestJS requires relaxed strict checks
		"strictNullChecks": false,
		"noImplicitAny": false,
		"strictBindCallApply": false,
		"noFallthroughCasesInSwitch": false,

		// Monorepo type resolution
		"types": []
	},
	"include": ["src/**/*", "../../config/**/*"],
	"exclude": ["src/**/*.spec.ts", "test/**/*"]
}
