# Dependencies (will be installed in container)
node_modules
# NOTE: package-lock.json is NOT excluded - required for npm ci

# Build outputs (not needed in Docker context)
dist
build
*.tsbuildinfo

# Git files (not needed for builds)
.git
.github

# Test outputs
test-results
playwright-report
coverage
.nyc_output

# Logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
lerna-debug.log*

# OS files
.DS_Store
Thumbs.db

# Editor files
.vscode
.idea
*.swp
*.swo
*~

# Environment files (secrets should never be in Docker context)
.env
.env.*
!.env.example

# Documentation (not needed for runtime)
*.md
!README.md

# CI/CD files (not needed in containers)
.gitlab-ci.yml
.travis.yml
azure-pipelines.yml

# Docker files (avoid recursion)
Dockerfile*
docker-compose*.yml
.dockerignore

# Temporary files
tmp
temp
*.tmp
