{
	"name": "generate-failure-report",
	"version": "1.0.0",
	"description": "Generate CI failure report aggregating build errors and test failures",
	"main": "dist/index.js",
	"scripts": {
		"build": "node ../build.mjs",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"format": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
		"format:check": "prettier --check 'src/**/*.ts' '__tests__/**/*.ts'",
		"lint": "eslint .",
		"all": "npm run format && npm run lint && npm run build && npm test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/yourusername/trip-settle.git"
	},
	"keywords": [
		"github-actions",
		"typescript",
		"ci-cd",
		"error-reporting",
		"build-failures"
	],
	"author": "Trip Settle",
	"license": "MIT",
	"dependencies": {
		"@actions/core": "^1.11.1",
		"@actions/github": "^6.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.37.0",
		"@types/node": "^22.10.5",
		"@vitest/ui": "^3.2.4",
		"esbuild": "^0.25.11",
		"eslint": "^9.37.0",
		"prettier": "^3.4.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.46.2",
		"vitest": "^3.2.4"
	}
}
